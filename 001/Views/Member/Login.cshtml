@model GhostStory.Models.VMMemberLogin

@{
    ViewBag.Title = "Login";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container01 border-0 rounded shadow">
        <div class="form-horizontal ">
            <h5 class="text-white ">會員登入</h5> <h6 class="text-warning">@ViewBag.ErrMsg</h6>
            <hr style="color:blanchedalmond" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @*@Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "control-label col-md-2" })*@

                <h6 class="text-white "> 會員帳號</h6>
                <div class="col-md-10 inputBox">
                    @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control-lg" } })
                    @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <h6 class="text-white "> 會員密碼</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control-lg" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="會員登入" class="btn btn-outline-light  " />
                    @Html.ActionLink("會員註冊", "Register", null, new { @class = "btn btn-outline-info" })
                </div>

            </div>

            <h5 class="text-center">
                @Html.ActionLink("回首頁", "Index",null, new { @class = "badge badge-pill badge-light" })
            </h5>
        </div>


    </div>







}







