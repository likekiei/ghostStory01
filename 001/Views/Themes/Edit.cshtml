@model GhostStory.Models.Themes

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_Manager.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="text-center"><span class="badge badge-secondary">文章主題名稱修改</span></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.themesID)

    <div class="form-group">
     <h4>   @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2 badge badge-light" })</h4>
    <div class="col-md-12">
        @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="確定修改" class="btn btn-outline-light" />
            @Html.ActionLink("取消修改", "Index",null, new { @class = "btn btn-outline-light" })
        </div>
    </div>
</div>
}



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
