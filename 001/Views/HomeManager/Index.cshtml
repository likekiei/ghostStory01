        <h4 class="p-2 bd-highlight">  <span class="badge badge-info"> 目前本站會員人數:  <span class="badge badge-light"> @ViewBag.memberCount</span>   </span> </h4>

        <h4 class="p-2 bd-highlight ">  <span class="badge" style="background-color: rgb(171, 154, 255); "> 目前文章總數:  <span class="badge badge-light"> @ViewBag.postCount</span>   </span> </h4>

    </div>*@








